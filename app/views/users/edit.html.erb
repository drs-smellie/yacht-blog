<h2>Edit <%= @user.username %></h2>

<%= form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>

 <%= debug @user.errors if @user.errors.any? %>

  <div class="row collapse">
      <div class="large-1 columns">
        <%= f.label :username, class: 'right inline' %></div>
     <div class="large-11 columns"><%= f.text_field :username, :autofocus => true %></div>
  </div>

  <div class="row collapse">
      <div class="large-1 columns">
        <%= f.label :email, class: 'right inline' %></div>
     <div class="large-11 columns"><%= f.email_field :email %></div>
  </div>
 
  <div class="row collapse">
    <div class="large-1 columns">
      <%= f.label :avatar, class: 'right inline' %></div>
    <div class="large-11 columns">
      <%= f.file_field :avatar %>
    </div><%= image_tag(f.object.avatar.small.url) if f.object.avatar? %>
  </div>
 <p>
 <p>
   <div class="row collapse">
    <div class="controls"><%= f.submit "Save", class: "button" %></div>
   </div>
<% end %>
